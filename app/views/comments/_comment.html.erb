<article class="media">
      <figure class="media-left">
        <p class="image is-48x48">
          <img src="https://bulma.io/images/placeholders/96x96.png">
        </p>
      </figure>
      <div class="media-content">
        <div class="content">
          <p>
            <strong><%= comment.user.name %></strong>
            <br>
              <%= comment.content %>
            <br>
            <small><% if liked_comment?(comment,current_user) %>
          <%= link_to "Like", like_path(get_comment_like_id(current_user,comment)), method: :delete %>(<%= comment.likes.count %>) 
          <% else %>
              <%= link_to "Like", likes_path(current_user: current_user.id, likable_id: comment.id, likable_type: "Comment"), method: :post %>(<%= comment.likes.count %>) 
                <% end %>
                <% if current_user == comment.user %>
                · <%= link_to "Delete", comment_path(comment), method: :delete %> · <%= time_ago_in_words(comment.created_at) %> ago
                <% end %>
              </small>
          </p>
        </div>
      </div>
    </article>

