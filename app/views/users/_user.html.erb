<table class="table">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Add Friend</th>
    </tr>
      <tbody>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.surname %></td>
      <td>
        <% if current_user.added?(user) %>
          <%= form_for(current_user, url: friendship_path, method: :delete) do |f| %>
        <%= hidden_field_tag :requested_id, user.id %>
        <%= f.submit "Cancle Request", class: "button is-primary is-small" %>
        <% end %>
        <% else %>  
        <%= form_for(current_user, url: friendships_path, method: :post) do |f| %>
      	<%= hidden_field_tag :requested_id, user.id %>
      	<%= f.submit "Add Friend", class: "button is-primary is-small" %>
      	<% end %>
        <% end %>

      </td>	
    </tr>

  </tbody>
  </thead>
</table>
